<p id="notice"><%= notice %></p>

<h1>Restaurants list :</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone  Number</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, restaurant %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_restaurant_path(restaurant) %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '<i class="fas fa-thumbs-up"></i>'.html_safe, restaurant_reviews_path(restaurant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

